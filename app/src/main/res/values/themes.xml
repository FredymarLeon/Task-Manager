<resources>
    <!-- Base application theme. -->

    <style name="Base.Theme.TaskManager" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_gray</item>
        <item name="colorPrimaryVariant">@color/blue_gray</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_gray</item>
        <item name="colorSecondaryVariant">@color/blue_gray</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Font. -->
        <item name="fontFamily">@font/noto_sans</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

    </style>

    <style name="Theme.TaskManager" parent="Base.Theme.TaskManager"/>

</resources>