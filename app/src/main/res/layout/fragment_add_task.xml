<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".fragments.AddTaskFragment">

        <TextView
            android:id="@+id/tvAddTaskList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/title_add_new_task"
            android:textColor="@color/dark_blue"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/addTaskTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAddTaskList"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:hint="@string/enter_title"
            android:inputType="text|number"
            android:maxLines="1"
            android:padding="15dp"
            android:background="@drawable/orange_border"
            android:textSize="20sp"
            tools:ignore="Autofill" />

        <EditText
            android:id="@+id/etAddTaskDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/addTaskTitle"
            android:hint="@string/enter_description"
            android:inputType="text|number"
            android:gravity="top"
            android:padding="15dp"
            android:textSize="18sp"
            android:background="@drawable/orange_border"
            android:layout_marginTop="12dp"
            tools:ignore="Autofill" />

</RelativeLayout>